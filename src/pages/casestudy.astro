  .sort p {
    color: var(--hvid);
  }

  button {
    width: fit-content;
    height: fit-content;
    place-self: center end;
  }

  .tekst {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    color: var(--hvid);
  }

  h2 {
    font-size: 2.5rem;
  }
  h3 {
    font-size: 2rem;
  }
