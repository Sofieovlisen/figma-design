---
import Accordion from "../components/Accordion.astro";
import Newsletter from "../components/Newsletter.astro";
import Layout from "../layouts/Layout.astro";
import Team from "../components/Team.astro";
import CoreValues from "../components/CoreValues.astro";
import "../styles/global.css";
import Vision from "../components/Vision.astro";
---

<Layout title="About">
  <section class="banner">
    <div class="bannertekst">
      <h4>Services</h4>
      <h2>Creative Services For Boost Your Business Growth</h2>
    </div>
  </section>
  <Vision />
  <CoreValues variant="light" />
  <section class="page">
    <div class="top">
      <div class="text">
        <h4>OUR TEAM</h4>
        <h2>We champion the bold to achieve the extraordinary</h2>
        <p>
          Our success stems from the synergy between dedicated teams and our
          valued clients. We prioritize a company culture that fosters
          exceptional productivity, ensures customer satisfaction, and promotes
          mutual respect among all team members.
        </p>
      </div>
    </div>
    <Team />
  </section>
  <Accordion />
  <Newsletter />
</Layout>

<style>
  .banner {
    background-image: url(/aboutbanner.jpg);
    height: 487px;
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .bannertekst {
    background: rgba(255, 255, 255, 0.85);
    padding: 48px 60px;
    width: fit-content;
    border-radius: 30px;
    place-self: center;
    margin-left: 200px;
  }

  h4 {
    font-family: var(--lato);
    font-size: 16px;
    color: var(--sort);
    padding: 0px 17px;
    border-radius: 20px;
    background: #ffcc4a;
    width: fit-content;
  }
  h2 {
    color: black;
  }

  .page {
    display: grid;
    grid-template-columns: 1fr[content] minmax(0, 1200px) 1fr;
    gap: 60px;

    padding-top: 100px;
    padding-bottom: 100px;
    > * {
      grid-column: content; /* man kan ogs√• bruge 2 (tallet) */
    }

    h4 {
      border-radius: 20px;
      background-color: var(--gul);
      padding: 0px 12px;
      width: fit-content;
      margin-bottom: 20px;
    }
    .text {
      color: var(--sort);
      max-width: 65ch;
    }
  }
</style>
