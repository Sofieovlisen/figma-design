<button popovertarget="popup">Login</button>

<div id="popup" popover>
  <h2>Dashboard Login</h2>
  <form>
    <label for="email">Email Adress</label><br />
    <input type="email" id="email" /><br />
    <label for="pwd">Password</label><br />
    <input type="password" id="pwd" /><br /><br />
    <button>Go to dashboard</button>
  </form>
</div>

<style>
  h2 {
    padding-bottom: 46px;
    font-family: "Cabin", sans-serif;
    font-size: 40px;
    font-weight: 700;
    line-height: 116%;
  }

  label {
    font-size: 18px;
    font-family: "Cabin", sans-serif;
  }

  input {
    background-color: #fff;
    color: black;
    width: 382px;
    height: auto;
    border-radius: 4px;
    margin-bottom: 30px;
    font-size: 24px;
    text-transform: capitalize;
  }

  div {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: black;
    color: #fff;
    border-radius: 30px;
    padding: 40px 60px 60px 60px;
    min-width: 750px;
  }

  [popover] {
    opacity: 0;
    translate: 0 -150%;

    transition: 0.6s;
    transition-property: opacity, display, overlay, translate;
    transition-behavior: allow-discrete;

    &:popover-open {
      opacity: 1;
      translate: 0 0;

      @starting-style {
        opacity: 0;
        translate: 0 100%;
      }
    }
  }
</style>
