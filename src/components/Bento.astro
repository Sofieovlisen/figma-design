<section class="bento">
  <div class="box-1"><img src="/bentoa.jpg" alt="" /></div>
  <div class="box-2"><img src="/bentob.jpg" alt="" /></div>
  <div class="box-3"><img src="/bentoc.jpg" alt="" /></div>
</section>

<style>
  .bento {
    display: grid;
    position: relative;
    grid-auto-rows: 1fr 1fr;
    grid-auto-columns: 1fr 1fr;
    width: fit-content;
    gap: 10px;

    grid-template-areas:
      "a b"
      "a c";

    &::before {
      content: "";
      position: absolute;
      background: #4eaf4e;
      bottom: -100px;
      left: 20px;
      width: 164px;
      height: 307px;
      transform: rotate(90deg);
      border-radius: 12px;
      z-index: -1;
    }

    &::after {
      position: absolute;
      top: -40px;
      right: 5px;
      width: 250px;
      height: 250px;
      content: url("/Pattern3.svg");
      object-fit: contain;
      z-index: -2;
    }
  }

  .box-1 {
    grid-area: a;
    place-self: end;
  }
  .box-2 {
    grid-area: b;
  }
  .box-3 {
    grid-area: c;
  }

  img {
    border-radius: 30px;
  }
</style>
