---
import "../styles/global.css";
//@ts-nocheck
const servicesData = await fetch(
  "https://frontend-design-theme.netlify.app/api/services"
).then((response) => response.json());
---

<ul>
  {
    servicesData.services.map((service) => (
      <li>
        <h2>{service.title}</h2>
        <p>{service.description}</p>
        <a href="#0" />
        <button data-surface="sort">{service.buttonText}</button>
      </li>
    ))
  }
</ul>

<style>
  section {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: -95px;
    aspect-ratio: 1;
    max-width: 60px;
    object-fit: cover;
    border-radius: 1e5px;
  }
  ul {
    display: flex;
    width: 1200px;
    flex-direction: row;
    align-items: flex-start;
    gap: 10px;
  }

  li {
    display: flex;
    padding: 46px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    /* flex: 1 0 0; */
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.2);

    background: rgba(38, 38, 38, 0.9);

    backdrop-filter: blur(16px);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 36px;
  }

  h2 {
    color: #fff;

    font-family: var(--cabin);
    font-size: 25px;
    font-style: normal;
    font-weight: 600;
    line-height: 116%;
  }

  p {
    color: #fff;
    font-family: var(--lato);
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 147.5%;
    width: 293.003px;
    height: 70.531px;
  }
</style>
